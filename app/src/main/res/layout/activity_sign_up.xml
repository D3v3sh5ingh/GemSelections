<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:padding="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.nikhil3000.gemselections.AuthRelated.SignUpActivity">
        <EditText
            android:id="@+id/_signupname"
            android:padding="10dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:layout_marginTop="50dp"
            android:background="@drawable/edittext"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:hint="Name"
            android:drawableLeft="@drawable/ic_person"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/_signupemail"
            android:padding="10dp"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/_signupphone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext"
            android:inputType="phone"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textAlignment="center"
            android:padding="10dp"
            android:hint="Contact Number"
            android:drawableLeft="@drawable/ic_call"
 />

        <EditText
            android:id="@+id/_signuppass"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittext"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textAlignment="center"
            android:padding="10dp"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/_signup_button"
            android:textColor="#fff"
            android:text="SIGN UP"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_width="120dp"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button1"/>

        <TextView
            android:id="@+id/_signupregistered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:clickable="true"
            android:text="Already registered? Login Here"/>
    </LinearLayout>

</ScrollView>

