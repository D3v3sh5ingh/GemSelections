<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/kavach_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOP NOW"
            android:background="@drawable/button"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textColor="#f28"
            android:textAlignment="center"
            android:textSize="18sp"
            android:text="@string/kavach_head"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAZAR SURAKSHA KAVACH"/>

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kavach_nazar"/>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BAGLAMUKHI KAVACH"/>

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kavach_baglamukhi"/>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVI KAVACH"/>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DURGA KAVACH"/>

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kavach_durga"/>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HANUMAN KAVACH"/>

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kavach_hanuman"/>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NARAYAN KAVACH"/>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PANCH MUKHI RUDRAKSHA KAVACH"/>

        <TextView
            android:layout_marginTop="20dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SHANI KAVACH"/>

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kavach_shani"/>
    </LinearLayout>

</ScrollView>