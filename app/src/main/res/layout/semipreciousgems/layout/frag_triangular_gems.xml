<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/triangular1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="#f54"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/triangular2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textColor="#567"/>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Golden Topaz"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textColor="#333"/>
                    <ImageView
                        android:id="@+id/triangular1"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lemon Topaz"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textColor="#333"/>
                    <ImageView
                        android:id="@+id/triangular2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green Amethyst"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textColor="#333"/>
                    <ImageView
                        android:id="@+id/triangular3"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rose Quartz"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textColor="#333"/>
                    <ImageView
                        android:id="@+id/triangular4"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green Fluorite"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textColor="#333"/>
                    <ImageView
                        android:id="@+id/triangular5"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Smoky Topaz"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textColor="#333"/>
                    <ImageView
                        android:id="@+id/triangular6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Green Onyx"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textColor="#333"/>
                    <ImageView
                        android:id="@+id/triangular7"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="White Quartz"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textColor="#333"/>
                    <ImageView
                        android:id="@+id/triangular8"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>