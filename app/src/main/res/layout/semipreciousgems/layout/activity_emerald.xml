<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="tech.iosd.gemselections.Emerald.EmeraldActivity"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/emerald_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="5dp"
        android:background="@color/colorPrimary1"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:popupTheme="@style/AppTheme.PopupOverlay"
        tools:targetApi="LOLLIPOP"></Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/emerald_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emerald_head"
                android:textSize="20dp"
                android:textColor="#509956"
                />

            <com.google.android.youtube.player.YouTubePlayerView
                android:layout_margin="10dp"
                android:id="@+id/emerald_video"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"></com.google.android.youtube.player.YouTubePlayerView>

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:textStyle="italic"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:text="Types of Emeralds:"/>

            <Spinner
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/emerald_spinner"
                android:layout_width="match_parent"
                android:background="@drawable/spinner"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:textStyle="italic"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Select Quality to know price:"/>

            <Spinner
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner"
                android:id="@+id/emerald_spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>

            <FrameLayout
                android:layout_margin="10dp"
                android:id="@+id/emerald_container"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>


