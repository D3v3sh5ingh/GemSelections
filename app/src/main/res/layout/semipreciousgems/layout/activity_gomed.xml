<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.nikhil3000.gemselections.Gomed.GomedActivity">
    <Toolbar
        android:id="@+id/gomed_toolbar"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="56dp"
        android:background="@color/colorPrimary4"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:popupTheme="@style/AppTheme.PopupOverlay"
        tools:targetApi="LOLLIPOP"/>

    <ScrollView
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gomed_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="GOMED | HESSONITE"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark4"
                />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/gomed_video"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.google.android.youtube.player.YouTubePlayerView>

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:textStyle="italic"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:text="Select One:"/>

            <Spinner
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/gomed_spinner"
                android:layout_width="match_parent"
                android:background="@drawable/spinner"
                android:layout_height="wrap_content"></Spinner>

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:textSize="18sp"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:text="Weight AVAILABLE \n2.25 rati to 11.25 rati"/>

            <Button
                android:id="@+id/btn_gomed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button1"
                android:text="Check Price"
                android:layout_gravity="center_horizontal"/>

            <FrameLayout
                android:id="@+id/gomed_container"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>

